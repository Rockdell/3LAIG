<yas>
    <scene root="quidditch" axis_length="10" />

    <views default="p1" >
        <perspective id="p1" near="0.1" far="500" angle="180">
            <from x="30" y="30" z="30" />
            <to x="0" y="0" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <background r="0" g="0.5" b="0.5" a="1" />
    </ambient>

    <lights>
        <omni id="light1" enabled="1" >
            <location x="5" y="5" z="5" w="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="0" g="0" b="0" a="1" />
        </omni>
        <omni id="light3" enabled="1" >
            <location x="0" y="20" z="0" w="1" />
            <ambient r="1" g="1" b="1" a="1" />
            <diffuse r="1" g="1" b="1" a="1" />
            <specular r="0" g="0" b="0" a="1" />
        </omni>
        <spot id="light2" enabled="1" angle="1" exponent="10">
            <location x="10" y="0" z="15" w="1" />
             <target x="3" y="3" z="3" />
            <ambient r="1" g="0" b="0" a="1" />
            <diffuse r="1" g="0" b="0" a="1" />
            <specular r="1" g="0" b="0" a="1" />
        </spot>
    </lights>

    <textures>
        <texture id="glass" file="images/vidral.jpg" />
    </textures>

    <materials>
        <material id="default" shininess = "50" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0.5" g="0.5" b="0.5" a="1" />
            <diffuse r="0.5" g="0.5" b="0.5" a="1" />
            <specular r="0.5" g="0.5" b="0.5" a="1" />
        </material>

        <material id="red" shininess = "50" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="1" g="0" b="0" a="1" />
            <diffuse r="1" g="0" b="0" a="1" />
            <specular r="1" g="0" b="0" a="1" />
        </material>

        <material id="blue" shininess = "50" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0" g="0" b="1" a="1" />
            <diffuse r="0" g="0" b="1" a="1" />
            <specular r="0" g="0" b="1" a="1" />
        </material>

        <material id="green" shininess = "50" >
            <emission r="0" g="0" b="0" a="1" />
            <ambient r="0" g="1" b="0" a="1" />
            <diffuse r="0" g="1" b="0" a="1" />
            <specular r="0" g="1" b="0" a="1" />
        </material>
    </materials>

    <transformations>
        <transformation id="translate1">
            <translate x="5" y="5" z="0" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="square">
            <rectangle x1="0" y1="0" x2="1" y2="1" />
        </primitive >

        <primitive id="rect_triangule_left">
            <triangle x1="0" y1="0" z1="0"
                x2="1" y2="0" z2="0"
                x3="0" y3="1" z3="0" />
        </primitive>

        <primitive id="rect_triangule_right">
            <triangle x1="0" y1="0" z1="0"
                x2="0" y2="1" z2="0"
                x3="1" y3="0" z3="0" />
        </primitive>

        <!-- GOAL POST PRIMITIVES-->
        <primitive id="post">
            <cylinder base="0.1" top="0.1" height="1" slices="30" stacks="30" />
        </primitive>

        <primitive id="ring">
            <torus inner="0.6" outer="0.7" slices="30" loops="30" />
        </primitive>

        <primitive id="grandStand_torus">
            <torus inner="1" outer="0.85" slices="30" loops="4" />
        </primitive>
    </primitives >

    <components>

        <component id="cube_back">
            <transformation>
                <translate x="1" y="0" z="0"/>
                <rotate axis="y" angle="180"/>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube_front">
            <transformation>
                <translate x="0" y="0" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube_left_side">
            <transformation>
                <rotate axis="y" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube_right_side">
            <transformation>
                <translate x="1" y="0" z="1" />
                <rotate axis="y" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube_top">
            <transformation>
                <translate x="0" y="1" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube_bot">
            <transformation>
                <rotate axis="x" angle="90" />
            </transformation>
            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="cube">
            <transformation>
				<translate x="-0.5" y="0" z="-0.5" />
			</transformation>
            <materials>
                <material id="default" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="cube_bot" />
                <componentref id="cube_top" />
                <componentref id="cube_right_side" />
                <componentref id="cube_left_side" />
                <componentref id="cube_front" />
                <componentref id="cube_back" />
            </children>
        </component>

        <!-- PITCH COMPONENTS
        There is no circle primitive, so we must make a "circle" from triangles and then do this
        -->

        <component id="field">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="blueTeam_goalPost_Site" />
                <componentref id="redTeam_goalPost_Site" />
            </children>
        </component>

        <!-- GOAL POST COMPONENTS-->
        <!-- POSTS -->
        <component id="low_post">
            <transformation>
                <scale x="1" y="1" z="2" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="post" />
            </children>
        </component>

        <component id="med_post">
            <transformation>
                <scale x="1" y="1" z="4" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="post" />
            </children>
        </component>

        <component id="high_post">
            <transformation>
                <scale x="1" y="1" z="7" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="post" />
            </children>
        </component>

        <!-- RINGS -->

        <component id="low_ring">
            <transformation>
                <translate x="0" y="0" z="2.35" />
                <rotate axis="y" angle="90"/>
            </transformation>

            <materials>
                <material id="green" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="ring" />
            </children>
        </component>

        <component id="med_ring">
            <transformation>
                <translate x="0" y="0" z="4.35" />
                <rotate axis="y" angle="90"/>
            </transformation>

            <materials>
                <material id="green" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="ring" />
            </children>
        </component>

        <component id="high_ring">
            <transformation>
                <translate x="0" y="0" z="7.35" />
                <rotate axis="y" angle="90"/>
            </transformation>

            <materials>
                <material id="green" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="ring" />
            </children>
        </component>

        <!-- GOALPOST STRUCTURES-->

        <component id="low_goalpost">
            <transformation>
                <translate x="0" y="0" z="-1.5" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="low_post" />
                <componentref id="low_ring" />
            </children>
        </component>

        <component id="med_goalpost">
            <transformation>
                <translate x="0" y="0" z="1.5" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="med_post" />
                <componentref id="med_ring" />
            </children>
        </component>

        <component id="high_goalpost">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="high_post" />
                <componentref id="high_ring" />
            </children>
        </component>

        <!-- GOALPOST TEAM SITES -->

        <component id="goalpost_site">
            <transformation>
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="high_goalpost" />
                <componentref id="med_goalpost" />
                <componentref id="low_goalpost" />
            </children>
        </component>

        <component id="redTeam_goalPost_Site">
            <transformation>
                <translate x="22" y="0" z="0" />
            </transformation>

            <materials>
                <material id="red" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="goalpost_site" />
            </children>
        </component>

        <component id="blueTeam_goalPost_Site">
            <transformation>
                <translate x="-22" y="0" z="0" />
                <rotate axis="y" angle="180" />
            </transformation>

            <materials>
                <material id="blue" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="goalpost_site" />
            </children>
        </component>

        <!-- END OF GOAL POST COMPONENTS-->

        <!-- GRANDSTAND COMPONENTS -->

        <component id="grandStand_baseStructure">
            <transformation>
                <scale x="15.4" y="2" z="42" />
                <rotate axis="x" angle="90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="goalpost_site" />
            </children>
        </component>

        <!-- WATCH TOWERS COMPONENTS -->

        <component id="tower_base">
            <transformation>
                <scale x="2" y="10" z="2" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="cube" />
            </children>
        </component>

        <component id="tower_stand">
            <transformation>
                <translate x="-1" y="10.001" z="-1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="stand_base" />
                <componentref id="stand_right_side" />
                <componentref id="stand_left_side" />
                <componentref id="stand_back" />
            </children>
        </component>

        <component id="stand_base">
            <transformation>
                <scale x="2" y="0" z="2" />
                <translate x="0" y="0" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="stand_right_side">
            <transformation>
                <scale x="2" y="1" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="rect_triangule_right" />
            </children>
        </component>

        <component id="stand_left_side">
            <transformation>
                <translate x="0" y="0" z="2" />
                <scale x="2" y="1" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="rect_triangule_left" />
            </children>
        </component>

        <component id="stand_back">
            <transformation>
                <rotate axis="y" angle="-90" />
                <scale x="2" y="1" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <!-- TOWER TOP -->

        <component id="tower_top">
            <transformation>
                <translate x="-1" y="12.001" z="1" />
                <rotate axis="x" angle="180" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="top_roof" />
                <componentref id="top_right_side" />
                <componentref id="top_left_side" />
                <componentref id="top_back" />
            </children>
        </component>

        <component id="top_roof">
            <transformation>
                <scale x="2" y="0" z="2" />
                <translate x="0" y="0" z="1" />
                <rotate axis="x" angle="-90" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="top_right_side">
            <transformation>
                <scale x="2" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="rect_triangule_right" />
            </children>
        </component>

        <component id="top_left_side">
            <transformation>
                <translate x="0" y="0" z="2" />
                <scale x="2" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="rect_triangule_left" />
            </children>
        </component>

        <component id="top_back">
            <transformation>
                <rotate axis="y" angle="-90" />
                <scale x="2" y="2" z="1" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <primitiveref id="square" />
            </children>
        </component>

        <component id="test_tower">
            <transformation>
            </transformation>

            <materials>
                <material id="blue" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="tower_base" />
                <componentref id="tower_stand" />
                <componentref id="tower_top" />
            </children>
        </component>

        <component id="quidditch">
            <transformation>
            </transformation>

            <materials>
                <material id="default" />
            </materials>

            <texture id="none" length_s="1" length_t="1" />

            <children>
                <componentref id="field" />
                <componentref id="grandStand_baseStructure" />
                <componentref id="test_tower" />
            </children>
        </component>

    </components>

</yas>
