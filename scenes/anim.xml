<yas>

    <scene root="root" axis_length="2.0" />

    <views default="perspective">
        <perspective id="perspective" near="0.1" far="500.0" angle="60">
            <from x="10.0" y="10.0" z="10.0" />
            <to x="0.0" y="0.0" z="0.0" />
        </perspective>

        <ortho id="oview02" near="0.1" far="100.0" left="-6" right="6" top="6.5" bottom="-2.5">
            <from x="2.5" y="2" z="10" />
            <to x="2.5" y="2" z="0" />
        </ortho>

        <ortho id="oview03" near="0.1" far="100.0" left="-6.0" right="6.0" top="5.0" bottom="-3.0">
            <from x="10" y="2" z="3" />
            <to x="0" y="2" z="3" />
        </ortho>
   
        <ortho id="oview04" near="0.1" far="70" left="-7" right="7" top="7" bottom="-7">
            <from x="10" y="10" z="10" />
            <to x="0" y="0" z="0" />
        </ortho>
           
    </views>

    <ambient>
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <background r="0.0" g="0.75" b="1.0" a="1.0" />
    </ambient>

    <lights>
        <omni id="light" enabled="1">
            <location x="6.0" y="6.0" z="1.0" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
		
		 <omni id="light2" enabled="1">
            <location x="3.5" y="6.0" z="6.0" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
	
        <omni id="light3" enabled="1">
            <location x="0.1" y="8.0" z="1.0" w="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>

        <spot id="light4" enabled="0" angle="35" exponent="0.1">
            <location x="-6.0" y="3.0" z="3.0" w="1.0" />
            <target x="0.0" y="3.0" z="3.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </spot>
    </lights>

    <textures>
        <texture id="testText" file="images/testTexture.jpg" />
        <texture id="cube_texture" file="images/bank.jpg" />
        <texture id="lights" file="images/lights.jpg" />
        <texture id="wood" file="images/wood.jpg" />
        <texture id="blackMetal" file="images/blackMetal.jpg" />
        <texture id="mattress" file="images/mattress.jpg" />
        <texture id="vidal" file="images/vidal.jpg" />
        <texture id="bank" file="images/bank.jpg" />
        <texture id="leftWP" file="images/leftWP.png" />
        <texture id="rightWP" file="images/rightWP.png" />
        <texture id="donut" file="images/donut.jpg" />
        <texture id="floor" file="images/floor.jpg" />
    </textures>

    <materials>
        <material id="cube_material" shininess="1.0">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.4" b="0.4" a="1.0" />
            <diffuse r="0.4" g="0.4" b="0.4" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="bed_material" shininess="0.1">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.2" g="0.1" b="0.0" a="1.0" />
            <specular r="0.2" g="0.1" b="0.0" a="1.0" />
        </material>

        <material id="mattress_material" shininess="0.2">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
            <specular r="0.6" g="0.6" b="0.6" a="1.0" />
        </material>

        <material id="reflective" shininess="0.2">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.8" g="0.8" b="0.8" a="1.0" />
        </material>

        <material id="mat1" shininess="0.2">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="1.0" g="0.0" b="0.0" a="1.0" />
        </material>

        <material id="mat2" shininess="0.2">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="0.0" b="1.0" a="1.0" />
            <specular r="0.0" g="0.0" b="1.0" a="1.0" />
        </material>

        <material id="mat3" shininess="0.2">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="0.0" g="1.0" b="0.0" a="1.0" />
            <specular r="0.0" g="1.0" b="0.0" a="1.0" />
        </material>


    </materials>

    <transformations>
        <transformation id="test_transl">
            <translate x="0.0" y="2.5" z="0.3" />
        </transformation>
    </transformations>

    <animations>
        <linear id="anim1" span="5" >
            <controlpoint xx="-7" yy="0" zz="-7" />
            <controlpoint xx="7" yy="3" zz="-7" />
            <controlpoint xx="7" yy="0" zz="7" />
            <controlpoint xx="-7" yy="3" zz="7" />
            <controlpoint xx="-7" yy="0" zz="-7" />
        </linear>

         <linear id="anim2" span="5" >
            <controlpoint xx="0" yy="0" zz="0" />
            <controlpoint xx="5" yy="5" zz="0" />
            <!-- <controlpoint xx="5" yy="0" zz="5" />
            <controlpoint xx="0" yy="5" zz="5" />
            <controlpoint xx="0" yy="0" zz="0" /> -->
        </linear>

        <circular id="circ1" span="10" center="0 0 0" radius="3" startang="0" rotang="-3600" />
        <circular id="circ2" span="10" center="0 0 0" radius="5" startang="0" rotang="3600" />
        <circular id="circ3" span="5" center="0 0 0" radius="9.8995" startang="-225" rotang="-720" />
    </animations>

    <primitives>
        <primitive id="cube_face">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>
    </primitives>

    <components>

        <component id="root">

            <transformation> </transformation>

            <materials>
                <material id="cube_material" />
            </materials>

            <texture id="none" />

            <children>
                <componentref id="cube" />
                <componentref id="cube2" />
                <componentref id="cube3" />
            </children>
        </component>

        <component id="cube3">
 
            <transformation> 
                 <!-- <translate x="5.0" y="0.0" z="5.0" /> -->
            </transformation>

            <animations>
                <animationref id="anim1" />
                <animationref id="circ3" />
            </animations>

            <materials>
                <material id="cube_material" />
            </materials>

            <texture id="testText" length_s="1" length_t="1" />

            <children>
                <componentref id="cube_front_face" />
                <componentref id="cube_back_face" />
                <componentref id="cube_top_face" />
                <componentref id="cube_bottom_face" />
                <componentref id="cube_right_face" />
                <componentref id="cube_left_face" />
            </children>
        </component>

        <component id="cube2">
 
            <transformation> 
                 <!-- <translate x="5.0" y="0.0" z="5.0" /> -->
            </transformation>

            <animations>
                <animationref id="circ2" />
            </animations>

            <materials>
                <material id="cube_material" />
            </materials>

            <texture id="testText" length_s="1" length_t="1" />

            <children>
                <componentref id="cube_front_face" />
                <componentref id="cube_back_face" />
                <componentref id="cube_top_face" />
                <componentref id="cube_bottom_face" />
                <componentref id="cube_right_face" />
                <componentref id="cube_left_face" />
            </children>
        </component>

        <component id="cube">
 
            <transformation>
                <!-- <translate x="1.0" y="0.0" z="0.0" />  -->
            </transformation>

            <animations>
                <!-- <animationref id="anim1" /> -->
                <animationref id="circ1" />
            </animations>

            <materials>
                <material id="cube_material" />
            </materials>

            <texture id="testText" length_s="1" length_t="1" />

            <children>
                <componentref id="cube_front_face" />
                <componentref id="cube_back_face" />
                <componentref id="cube_top_face" />
                <componentref id="cube_bottom_face" />
                <componentref id="cube_right_face" />
                <componentref id="cube_left_face" />
            </children>
        </component>

        <component id="cube_front_face">
            <transformation>
                    <translate x="0.0" y="0.0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="cube_face" />
            </children>
        </component>

        <component id="cube_back_face">
            <transformation>
                <rotate axis="y" angle="180.0" />
                <translate x="0.0" y="0.0" z="0.5" />    
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="cube_face" />
            </children>
        </component>

        <component id="cube_top_face">
            <transformation>
                <rotate axis="x" angle="-90.0" />
                <translate x="0.0" y="0.0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="cube_face" />
            </children>
        </component>

        <component id="cube_bottom_face">
            <transformation>
                <rotate axis="x" angle="90.0" />
                <translate x="0.0" y="0.0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="cube_face" />
            </children>
        </component>

        <component id="cube_right_face">
            <transformation>
                <rotate axis="y" angle="90.0" />
                <translate x="0.0" y="0.0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="cube_face" />
            </children>
        </component>

        <component id="cube_left_face">
            <transformation>  
                <rotate axis="y" angle="-90.0" />
                <translate x="0.0" y="0.0" z="0.5" />
            </transformation>

            <materials>
                <material id="inherit" />
            </materials>

            <texture id="inherit" />

            <children>
                <primitiveref id="cube_face" />
            </children>
        </component>

    </components>

</yas>